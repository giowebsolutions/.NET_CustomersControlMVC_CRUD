@model CustomerModel
@{
    ViewData["Title"] = "Add Customer";
}

<h1>Add Customer</h1>

<form asp-controller="Customers" asp-action="Create" method="post">
    <div class="d-flex row justify-content-between gap-2">
        <div class="form-group col">
            <input type="text" asp-for="Name" class="form-control" id="inputName4" placeholder="Name">
        </div>
    </div>
    <div class="d-flex row justify-content-between my-3">
        <div class="form-group col-md-6">
            <div class="col-12">
                <input type="text" asp-for="Email2" class="form-control" id="inputEmail4" placeholder="Email">
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="col-12">
                <div class="form-group">
                    <input type="text" asp-for="Address" class="form-control" id="inputAddress" placeholder="1234 Main St">
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex row justify-content-between gap-2 mb-4">
        <div class="form-group col">
            <input type="tel" asp-for="ContactNumber" class="form-control" id="inputContact" placeholder="Contact Number">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

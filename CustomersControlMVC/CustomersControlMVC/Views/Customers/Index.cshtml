@model List<CustomerModel>

@{
    ViewData["Title"] = "Customers";
}


<div>
    <a class="btn btn-primary" asp-controller="Customers" asp-action="Add">Add</a>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Contact Number</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
            {

                foreach(CustomerModel customer in Model)
                {
                    <tr>
                        <th scope="row">@customer.Id</th>
                        <td>@customer.Name</td>
                        <td>@customer.Address</td>
                        <td>@customer.ContactNumber</td>
                        <td>@customer.Email2</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@customer.Id" asp-controller="Customers" asp-action="Edit">Edit</a>
                                <a role="button" class="ms-2 btn btn-danger" asp-route-id="@customer.Id" asp-controller="Customers" asp-action="ConfirmDelete">Delete</a>
                            </div>
                        </td>
                    </tr>

                }
            }

    </tbody>
</table>